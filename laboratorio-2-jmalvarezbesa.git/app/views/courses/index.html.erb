<p id="notice"><%= notice %></p>

<h1>Cursos</h1>

<table>
  <thead>
    <tr>
      <th>Nro</th>
      <th>Curso</th>
      <th>Código</th>
      <th>Profesor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.id %></td>
        <td><%= course.title %></td>
        <td><%= course.code %></td>
        <td><%= course.Person.first_name %> <%= course.Person.last_name %></td>
        <td><%= link_to 'Detalle', course %></td>
        <td><%= link_to 'Editar', edit_course_path(course) %></td>
        <td><%= link_to 'Eliminar', course, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table><br />
<strong>Filtrar cursos por nombre:</strong><br />
<form>
  <input name="q" <%= @q %>>
  <button type="summit">Buscar</button>
</form>
<br>

<%= link_to 'Nuevo Curso', new_course_path %>
